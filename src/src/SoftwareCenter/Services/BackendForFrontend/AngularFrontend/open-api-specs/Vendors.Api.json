{
  "openapi": "3.1.1",
  "info": {
    "title": "Vendors.Api | vendors.bff.v1",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://vendorsapi-dashboard.dev.localhost:15100/"
    }
  ],
  "paths": {
    "/api/vendors/": {
      "get": {
        "tags": ["Vendors"],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/VendorListItem"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["Vendors"],
        "summary": "POST /vendors",
        "description": "Allows a manager to add a new vendor to the system.",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateVendorRequestModel"
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": "Created",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CreateVendorResponseModel"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "CreateVendorRequestModel": {
        "required": ["name", "description", "pointOfContactName"],
        "type": "object",
        "properties": {
          "name": {
            "maxLength": 50,
            "minLength": 10,
            "type": "string"
          },
          "description": {
            "maxLength": 500,
            "minLength": 10,
            "type": "string"
          },
          "pointOfContactName": {
            "type": "string"
          },
          "pointOfContactEmail": {
            "type": "string"
          },
          "pointOfContactPhone": {
            "type": "string"
          }
        }
      },
      "CreateVendorResponseModel": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "managerId": {
            "type": "string",
            "format": "uuid"
          },
          "name": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "pointOfContact": {
            "$ref": "#/components/schemas/VendorPointOfContact"
          }
        }
      },
      "VendorListItem": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "name": {
            "type": "string"
          },
          "description": {
            "type": "string"
          }
        }
      },
      "VendorPointOfContact": {
        "required": ["id", "name"],
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "name": {
            "type": "string"
          },
          "email": {
            "type": ["null", "string"]
          },
          "phone": {
            "type": ["null", "string"]
          }
        }
      }
    }
  },
  "tags": [
    {
      "name": "Vendors"
    }
  ]
}
