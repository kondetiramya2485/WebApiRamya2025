{
  "Authentication": {
    "Schemes": {
      "Bearer": {
        "ClientId": "bff",
        "ClientSecret": "oidc-pkce-confidential_secret",
        "GetClaimsFromUserInfoEndpoint": true,
        "RequireHttpsMetadata": false,
        "SaveTokens": true,
        "Scope": [
          "openid",
          "profile",
          "email"
        ]
      },
      "OpenIdConnect": {
        "ClientId": "bff",
        "ClientSecret": "oidc-pkce-confidential_secret",
        "GetClaimsFromUserInfoEndpoint": true,
        "RequireHttpsMetadata": false,
        "SaveTokens": true
      }
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Yarp.ReverseProxy": "Debug"
    }
  },
  "ReverseProxy": {
    "Clusters": {
      "catalogapi": {
        "Destinations": {
          "catalogapi": {
            "Address": "https://catalogapi"
          }
        }
      },
      "frontend": {
        "Destinations": {
          "frontend": {
            "Address": "http://localhost:4200"
          }
        }
      },
      "vendorsapi": {
        "Destinations": {
          "vendorsapi": {
            "Address": "https://vendorsapi"
          }
        }
      }
    },
    "Routes": {
      "catalogapidocs": {
        "AuthorizationPolicy": "Anonymous",
        "ClusterId": "catalogapi",
        "Match": {
          "Path": "/dev/catalog/openapi/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/dev/catalog"
          }
        ]
      },
      "catalogapi": {
        "AuthorizationPolicy": "Default",
        "ClusterId": "catalogapi",
        "Match": {
          "Path": "/api/catalog/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/api/catalog"
          }
        ]
      },
      "vendorsapidocs": {
        "AuthorizationPolicy": "Anonymous",
        "ClusterId": "vendorsapi",
        "Match": {
          "Path": "/dev/vendors/openapi/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/dev/vendors"
          }
        ]
      },
      "vendorsapi": {
        "AuthorizationPolicy": "Default",
        "ClusterId": "vendorsapi",
        "Match": {
          "Path": "/api/vendors/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/api/vendors"
          }
        ]
      },
      "frontend": {
        "ClusterId": "frontend",
        "Match": {
          "Path": "/{**catch-all}"
        }
      },
      "routeallcss": {
        "ClusterId": "frontend",
        "Match": {
          "Path": "{nomatterwhat}.css"
        }
      },
      "routealljs": {
        "ClusterId": "frontend",
        "Match": {
          "Path": "{nomatterwhat}.js"
        }
      },
      "vite": {
        "ClusterId": "frontend",
        "Match": {
          "Path": "@vite/{**catch-all}"
        }
      },
      "vitefs": {
        "ClusterId": "frontend",
        "Match": {
          "Path": "@fs/{**catch-all}"
        }
      },
      "webpacklazyloadingsources": {
        "ClusterId": "frontend",
        "Match": {
          "Path": "/src_{nomatterwhat}_ts.js"
        }
      },
      "webpacknodesrcmap": {
        "ClusterId": "frontend",
        "Match": {
          "Path": "/{nomatterwhat}.js.map"
        }
      }
    }
  }
}
